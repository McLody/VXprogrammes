/**index.wxss**/
.VerticalNav.nav {
  width: 200rpx;
  white-space: initial;
}

.VerticalNav.nav .cu-item {
  width: 100%;
  text-align: center;
  background-color: #fff;
  margin: 0;
  border: none;
  height: 50px;
  position: relative;
}

.VerticalNav.nav .cu-item.cur {
  background-color: #fff;
}
.VerticalNav.nav .cu-item.cur::after {
  content: "";
  width: 8rpx;
  height: 30rpx;
  border-radius: 10rpx 0 0 10rpx;
  position: absolute;
  background-color: currentColor;
  top: 0;
  right: 0rpx;
  bottom: 0;
  margin: auto;
}
.VerticalBox{
  display: flex;
}
.VerticalMain{
  background-color: #fff;
}
.Bottom{
  position: relative;
	display: flex;
  margin-left:30rpx;
  flex-wrap:wrap;
  font-size:30rpx;
  border:10rpx #000000;
}
.Bottom>.image{
  border-radius: 20rpx;
}
.row{
  display: flex;
  flex-direction: row;
}
.Bottom .buy{
  position:absolute;
  padding-top:80rpx;
  right:30rpx;
}
.visibilityHidden{
  visibility:hidden;
}
.stepper {  
    width:80px;  
    height: 30px;  
    /*给主容器设一个边框*/  
    border: 5rpx solid #000000;  
    border-radius: 3px;  
    margin:15px auto;  
    background: white;
}  
  
/*加号和减号*/  
.stepper .sign {  
    width: 23px;  
    line-height: 30px;  
    text-align: center;  
    float: left;   
    font-weight:500px;
}  
  
/*数值*/  
.stepper .number {  
    width: 30px;  
    height: 28px; 
    float:left; 
    margin: 0 auto;   
    text-align: center;  
    font-size: 14px;  
    font-weight:1000;
    color: #000000;
    /*给中间的input设置左右边框即可*/  
    border-left: 5rpx solid #000000;  
    border-right: 5rpx solid #000000;  
}  
  
/*普通样式*/  
.stepper .normal{  
    color: black;  
}  
/*禁用样式*/  
.stepper .disabled{  
    color: #ccc;  
}  
.Cart{
  position: relative;
	display: flex;
  margin-left:60rpx;
  flex-wrap:wrap;
  font-size:30rpx;
}